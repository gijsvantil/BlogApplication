extends layoutloggedin

block content
	.container.profile
		div.row
			div.col-sm-6.profile
				h3 Your profile:
				strong Username:
				p= sessionuser.username
				strong Full name
				p= sessionuser.firstname + " " + sessionuser.lastname
				strong Email
				p= sessionuser.email
			div.col-sm-6.posts
				h3 Your posts:
				each post in posts
					.singlepost
						p= post.title
						p= post.body
					.singlepostcomment


				